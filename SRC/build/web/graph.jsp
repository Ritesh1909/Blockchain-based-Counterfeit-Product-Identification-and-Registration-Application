<%
Gson gsonObj = new Gson();
Map<Object,Object> map = null;
List<Map<Object,Object>> list = new ArrayList<Map<Object,Object>>();
 String plan="";
int id=0;
Class.forName("com.mysql.jdbc.Driver");
            Connection con = DriverManager.getConnection("jdbc:mysql://localhost/fakeproduct","root","root"); 
            PreparedStatement ps = con.prepareStatement("SELECT COUNT(status)as tot,status FROM product1 GROUP BY status");
            ResultSet rs = ps.executeQuery();
            System.out.println(ps);
            while(rs.next())
            {
                plan = rs.getString("status");
                id = rs.getInt("tot");
          
map = new HashMap<Object,Object>(); map.put("label", plan); map.put("y", id); list.add(map);
   }
String dataPoints = gsonObj.toJson(list);
%>
 

